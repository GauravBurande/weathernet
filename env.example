# Environment Configuration for DePIN WeatherNet
# Copy this file to .env.local and modify as needed

# Environment Mode
# Set to 'production' for production deployment
# Set to 'development' for development (default)
NODE_ENV=development

# Weather Data Polling Configuration
# Polling interval in milliseconds (default: 15000 = 15 seconds)
WEATHER_POLL_INTERVAL=15000

# API Endpoints (customize these for your deployment)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_GETDATA_ENDPOINT=/api/getdata
NEXT_PUBLIC_STOREDATA_ENDPOINT=/api/storedata
NEXT_PUBLIC_APPLY_ENDPOINT=/api/apply

# Development Mode Settings
# Enable/disable development features
NEXT_PUBLIC_ENABLE_DEV_LOGGING=true
NEXT_PUBLIC_SIMULATE_REALTIME=true

# Production Mode Settings
# Enable/disable production features
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_RETRY_LOGIC=true
NEXT_PUBLIC_MAX_RETRY_ATTEMPTS=3
NEXT_PUBLIC_RETRY_DELAY=2000

# Data Management
# Maximum data points to keep in memory
NEXT_PUBLIC_MAX_DATA_POINTS=1000

# Optional: Custom API Configuration
# NEXT_PUBLIC_CUSTOM_API_KEY=your_api_key_here
# NEXT_PUBLIC_CUSTOM_API_URL=https://api.example.com
